
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Activity themes -->

    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar" tools:ignore="NewApi">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" tools:ignore="NewApi">
        <item name="android:background">#ff9a9a9a</item>
        <item name="android:text">#ff000000</item>
    </style>

    <style name="AppTheme" parent="CustomActionBarTheme" />
    <!-- Widget styling -->

    <style name="Widget" />

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/android</item>
        <item name="android:shadowColor">#ff093dff</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>
